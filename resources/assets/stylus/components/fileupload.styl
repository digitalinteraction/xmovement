#fileinput-button
	position relative
	overflow hidden
	
#fileinput-button input
	position absolute
	top 0px
	right 0px
	left 0px
	bottom 0px 
	margin 0
	opacity 0
	-ms-filter 'alpha(opacity=0)'
	direction ltr
	cursor pointer
	
#cc-search-field
	border #e6e6e6 1px solid
	border-radius 4px
	outline none
	margin-top 10px
	padding 10px 12px
	width 260px
	
#cc-search-button
	margin 0
	&:hover
		color success-color
		
#cc-search-results
	list-style none
	margin 40px 0
	padding 0
	.cc-search-result
		float left
		list-style none
		margin 0
		padding 0
		background-size cover
		background-position center center
		background-repeat no-repeat
		border white 5px solid
		padding-bottom 22%
		height 0px
		width 33%
		&:hover
			border success-color 5px solid
			cursor pointer
		&.selected
			border success-color 5px solid
#progress
	border-radius 16px
	display none
	height 12px
	margin 20px

#files
	margin 20px 0
	img
		display inline-block
		max-height 120px
		max-width 120px  