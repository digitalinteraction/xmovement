// Footer

.footer
	margin-top 30px 
	.footer-content
		padding 20px 
		text-align center
		ul
			list-style none
			margin 0
			padding 0
			li
				display inline-block 
				margin 0 10px
				padding 0
				p, a
					color #CCC
				a:hover
					color main-color
			
body.colorful
	.footer
		border-top none
		.footer-content
			ul li
				p, a
					color white
				a:hover
					color rgba(255, 255, 255, 0.8)